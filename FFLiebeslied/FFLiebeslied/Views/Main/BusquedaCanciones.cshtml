
@{
    ViewBag.Title = "BusquedaCanciones";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/busquedaCanciones.css" />
</head>

<body>
    <div id="contenido">
        <div id="divTitulo">
            <h1>Busca tu canción</h1>
            <h3>Busca una canción utilizando la API de Musixmatch y agrégala a tu disco</h3>
        </div>

        <div>
            <form method="post">

                <div id="titulo">
                    <p>Título de la canción</p>
                    @Html.Editor("titulo", new { htmlAttributes = new { @class = "form-control", placeholder = "Título" } })
                    @if (ViewBag.mensajeTitulo != null)
                    {
                        @ViewBag.mensajeTitulo
                    }
                </div>

                <div id="artista">
                    <p>Artista</p>
                    @Html.Editor("artista", new { htmlAttributes = new { @class = "form-control", placeholder = "Artista" } })
                </div>


                <button type="submit" id="btnOk">Buscar</button>
            </form>
        </div>
    </div>
    
</body>