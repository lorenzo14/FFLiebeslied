
@{
    ViewBag.Title = "BusquedaCanciones";
}

<head>

</head>

<body>
    <div id="divTitulo">
        <h1>Busca tu canción</h1>
        <h3>Busca una canción utilizando la API de Musixmatch, y agrégala a tu disco</h3>
    </div>

    <div>
        <form method="post">
            <table id="tablaBusqueda">
                <tr>
                    <td><label>Título de la canción</label></td>
                    <td>@Html.Editor("titulo", new { htmlAttributes = new { @class = "form-control", placeholder = "Título" } })</td>
                    <td>
                        @if (ViewBag.mensajeTitulo != null)
                        {
                            @ViewBag.mensajeTitulo
                        }
                    </td>
                </tr>

                <tr>
                    <td><label>Artista</label></td>
                    <td>@Html.Editor("artista", new { htmlAttributes = new { @class = "form-control", placeholder = "Artista" } })</td>

                </tr>
            </table>            
            
            <button type="submit" id="btnOk">OK</button>
        </form>
    </div>
</body>